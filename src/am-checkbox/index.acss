.am-checkbox {
  position: relative;
  display: inline-block;
}

.am-checkbox-value {
  position: absolute;
  z-index: 1;
  border-radius: 50%;
  opacity: 0;
}

.am-checkbox-synthetic {
  position: absolute;
  z-index: 2;
  pointer-events: none;
  top: 0;
  left: 0;
  border-radius: 50%;
  height: 100%;
  width: 100%;
  background-image: url(data:image/png;base64,);
  background-size: contain;
  background-repeat: no-repeat;
}

.am-checkbox-value.a-checkbox-checked + .am-checkbox-synthetic {
  background-image: url(data:image/png;base64,);
}

.am-checkbox-value.a-checkbox-disabled.a-checkbox-checked + .am-checkbox-synthetic {
  background-image: url(data:image/png;base64,);
}

.am-checkbox-value.a-checkbox-disabled + .am-checkbox-synthetic {
  background-image: url(data:image/png;base64,);
}